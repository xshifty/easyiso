{% extends "base.html.j2" %}

{% block content %}
<form method="POST" action="/login" class="w-2/6 p-6 shadow-lg bg-white rounded-md">
    <h2 class="py-4">Login</h2>
    <hr class="mt-4">
    <div class="mt-4">
        <label for="username" class="block text-base mb-2">Usuario</label>
        <input type="text" id="username" name="username" class="border w-full text-base p-3 focus:outline-none focus:ring-0 focus:border-gray-600" placeholder="Digite seu nome de usuario" />
    </div>
    <div class="mt-4">
        <label for="password" class="block text-base mb-2">Senha</label>
        <input type="password" id="password" name="password" class="border w-full h-10 p-3 focus:outline-none focus:ring-0 focus:border-gray-600" placeholder="Digite a sua senha" />
    </div>
    <div class="mt-4 py-4 items-center">
        <input type="submit" value="Entrar" class="button bg-indigo-500 p-3 text-white rounded-md w-1/2" />
    </div>
</form>
{% endblock %}
